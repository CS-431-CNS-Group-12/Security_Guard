CXX = g++   #compiler
CXXFLAGS = -Wall -Werror -std=c++20  #compilerflags
TARGETS = logread logappend
SRCS = client.cpp server.cpp input_validation.cpp ciphering.cpp 
OBJS = $(SRCS: .cpp=.o)
all: $(TARGETS)
logread: client.o input_validation.o ciphering.o
	$(CXX) $(CXXFLAGS) -o build/logread client.o input_validation.o ciphering.o
logappend: client.o input_validation.o ciphering.o
	$(CXX) $(CXXFLAGS) -o build/logappend client.o input_validation.o ciphering.o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@
install:
	install build/logread /usr/local/bin/
	install build/logappend /usr/local/bin/
clean:
	rm -f *.o build/logread build/logappend
.PHONY: all clean install
